<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/current" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/current" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/max"
        android:id="@+id/max"
        android:layout_below="@+id/current"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        android:id="@+id/button"
        android:layout_below="@+id/max"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp"
        android:onClick="add" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clearcurr"
        android:id="@+id/clearcurr"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="clearcurr" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clearall"
        android:id="@+id/clearall"
        android:layout_below="@+id/clearcurr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="clearall"
        android:nestedScrollingEnabled="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="0"
        android:id="@+id/currScore"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/clearcurr"
        android:layout_toEndOf="@+id/clearcurr" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="0"
        android:id="@+id/hiScore"
        android:layout_below="@+id/currScore"
        android:layout_toRightOf="@+id/clearcurr"
        android:layout_toEndOf="@+id/clearcurr" />


</RelativeLayout>
